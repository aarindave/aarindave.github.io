---
import RadialProgress from "../components/RadialProgress.astro";

const { testName, date, score, minScore, maxScore, color } = Astro.props;
---

<div class="drop-shadow-lg bg-slate-100 rounded-lg px-3 py-2 flex items-center gap-5">
    <RadialProgress progress={(score - minScore) / (maxScore - minScore)} color={color} text={score} />
    <div>
        <div class="font-semibold text-2xl">{testName}</div>
        <div class="text-lg text-gray-600">{date}</div>
    </div>
</div>