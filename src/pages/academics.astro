---
import Button from "../components/Button.astro";
import CourseList from "../components/CourseList.astro";
import TestScore from "../components/TestScore.astro";
import Page from "../layouts/Page.astro";
---

<Page title="Academics | Aarin Dave">
	<div class="px-7">
		<div class="flex items-center">
			<span class="font-semibold text-3xl mr-5 whitespace-nowrap"
				>High School Courses</span
			>
			<hr class="border-black border-2 w-full" />
		</div>

		<div class="grid grid-cols-3 gap-5">
			<div class="bg-red-500 text-white px-4 py-2 rounded-lg">
				<span class="text-3xl font-semibold">7</span> APs
			</div>
			<div class="bg-yellow-400 text-black px-4 py-2 rounded-lg">
				<span class="text-3xl font-semibold">2</span> DEs
			</div>
		</div>
	</div>
	<div class="px-7 mt-5">
		<div class="flex items-center">
			<h2 class="font-semibold text-3xl mr-5 whitespace-nowrap">
				Standardized Tests
			</h2>
			<hr class="border-black border-2 w-full" />
		</div>
		<div class="grid grid-cols-3 gap-7 mt-5">
			<TestScore
				testName="SAT"
				date="March 2024"
				score="1470"
				minScore="400"
				maxScore="1600"
				color="text-green-500"
			/>
